# ===========================================
# MARKET SEASONALITY EXPLORER - FREE API CONFIGURATION
# ===========================================

# Application Configuration
NEXT_PUBLIC_APP_NAME="Market Seasonality Explorer"
NEXT_PUBLIC_APP_VERSION="2.0.0"
NEXT_PUBLIC_APP_ENV="development"

# ===========================================
# ENABLE REAL APIs (FREE - NO KEYS REQUIRED)
# ===========================================

# Enable real API calls (set to "true" for live data)
NEXT_PUBLIC_USE_REAL_API="true"

# ===========================================
# FREE API ENDPOINTS (NO REGISTRATION REQUIRED)
# ===========================================

# CoinGecko API (FREE - No API key required, CORS enabled)
NEXT_PUBLIC_COINGECKO_API_URL="https://api.coingecko.com/api/v3"
NEXT_PUBLIC_COINGECKO_API_KEY=""

# CoinCap API (FREE - No API key required, CORS enabled)
NEXT_PUBLIC_COINCAP_API_URL="https://api.coincap.io/v2"
NEXT_PUBLIC_COINCAP_API_KEY=""

# CryptoCompare API (FREE tier - No key required for basic usage)
NEXT_PUBLIC_CRYPTOCOMPARE_API_URL="https://min-api.cryptocompare.com/data"
NEXT_PUBLIC_CRYPTOCOMPARE_API_KEY=""

# Binance API (Disabled due to CORS - will use proxy)
NEXT_PUBLIC_BINANCE_API_URL=""
NEXT_PUBLIC_BINANCE_API_KEY=""

# ===========================================
# CORS PROXY CONFIGURATION
# ===========================================

# CORS proxy for APIs that don't support CORS (optional)
NEXT_PUBLIC_CORS_PROXY=""

# ===========================================
# FEATURE FLAGS
# ===========================================

# API fallback strategy
NEXT_PUBLIC_API_FALLBACK_ENABLED="true"

# Enable WebSocket connections (disabled for free tier)
NEXT_PUBLIC_ENABLE_WEBSOCKET="false"

# Enable caching
NEXT_PUBLIC_ENABLE_CACHING="true"

# Enable analytics
NEXT_PUBLIC_ENABLE_ANALYTICS="false"

# Debug mode
NEXT_PUBLIC_DEBUG_MODE="true"

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================

# Cache duration in milliseconds (5 minutes)
NEXT_PUBLIC_CACHE_DURATION="300000"

# API timeout (10 seconds)
NEXT_PUBLIC_API_TIMEOUT="10000"

# Default refresh interval (60 seconds for free APIs)
NEXT_PUBLIC_DEFAULT_REFRESH_INTERVAL="60000"

# Rate limiting (conservative for free APIs)
NEXT_PUBLIC_API_RATE_LIMIT="30"
NEXT_PUBLIC_API_RATE_WINDOW="60000"

# ===========================================
# UI CONFIGURATION
# ===========================================

# Default theme
NEXT_PUBLIC_DEFAULT_THEME="light"

# Default cryptocurrency
NEXT_PUBLIC_DEFAULT_SYMBOL="bitcoin"

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Enable development tools
NEXT_PUBLIC_DEV_TOOLS="true"

# Mock data in development (fallback)
NEXT_PUBLIC_USE_MOCK_DATA="false"
